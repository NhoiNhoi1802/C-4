@model IEnumerable<Ếch_ăn_chay.Models.Category>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý danh mục";
}

<h2>Quản lý danh mục</h2>

<a class="btn btn-success mb-3" href="@Url.Action("CreateCategory", "Admin")">Thêm danh mục mới</a>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Tên danh mục</th>
            <th>Mô tả</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            foreach (var cat in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@cat.CategoryName</td>
                    <td>@cat.Description</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("EditCategory", "Admin", new { id = cat.CategoryId })">Sửa</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteCategory", "Admin", new { id = cat.CategoryId })">Xóa</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center">Chưa có danh mục nào</td></tr>
        }
    </tbody>
</table>
