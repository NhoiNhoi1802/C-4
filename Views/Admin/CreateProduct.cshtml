@model Ếch_ăn_chay.ViewModels.ProductViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Thêm sản phẩm Admin";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ProductCreate" method="post">
    <input type="hidden" asp-for="Product.ProductId" />

    <div class="mb-3">
        <label class="form-label">Tên sản phẩm</label>
        <input asp-for="Product.ProductName" class="form-control" />
        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Giá</label>
        <input asp-for="Product.Price" type="number" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Số lượng</label>
        <input asp-for="Product.Stock" class="form-control" />
        <span asp-validation-for="Product.Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Đơn vị</label>
        <input asp-for="Product.Unit" class="form-control" />
        <span asp-validation-for="Product.Unit" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Danh mục</label>
        @Html.DropDownListFor(
        m => m.Product.CategoryId,
                new SelectList(Model.Categories, "CategoryId", "CategoryName", Model.Product.CategoryId),
                "Chọn danh mục",
                new { @class = "form-select" })
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Dashboard" class="btn btn-secondary">Hủy</a>
</form>
