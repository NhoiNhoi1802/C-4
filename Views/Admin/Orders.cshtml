@model IEnumerable<Ếch_ăn_chay.Models.Order>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý đơn hàng";
}

<h2>Quản lý đơn hàng</h2>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Người đặt</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            foreach (var o in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@o.User.FullName</td>
                    <td>@o.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@o.TotalAmount.ToString("C")</td>
                    <td>@o.Status</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("DetailsOrder", "Admin", new { id = o.OrderId })">Chi tiết</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center">Chưa có đơn hàng nào</td></tr>
        }
    </tbody>
</table>
