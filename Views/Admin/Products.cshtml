@model IEnumerable<Ếch_ăn_chay.Models.Product>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý sản phẩm";
}

<h2>Quản lý sản phẩm</h2>

<a class="btn btn-success mb-3" href="@Url.Action("CreateProduct", "Admin")">Thêm sản phẩm mới</a>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Tên</th>
            <th>Danh mục</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            foreach (var p in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@p.ProductName</td>
                    <td>@p.Category?.CategoryName</td>
                    <td>@p.Price.ToString("C")</td>
                    <td>@p.Stock @p.Unit</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("EditProduct", "Admin", new { id = p.ProductId })">Sửa</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteProduct", "Admin", new { id = p.ProductId })">Xóa</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center">Chưa có sản phẩm nào</td></tr>
        }
    </tbody>
</table>
