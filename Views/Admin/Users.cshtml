@model IEnumerable<Ếch_ăn_chay.Models.ApplicationUser>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý người dùng";
}

<h2>Quản lý người dùng</h2>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            foreach (var u in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@u.FullName</td>
                    <td>@u.Email</td>
                    <td>@u.Role</td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center">Chưa có người dùng nào</td></tr>
        }
    </tbody>
</table>
