@using Ếch_ăn_chay.Models
@model List<CartItem>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Giỏ hàng";
}

<h2>Giỏ hàng của bạn</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Giỏ hàng đang trống</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead class="table-success">
            <tr>
                <th>Ảnh</th>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.Product.ImageUrl" width="80" /></td>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product.Price* item.Quantity).ToString("C")</td>
                    <td>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Remove", "Cart", new { id = item.Product.ProductId })">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <h4>Tổng tiền: @Model.Sum(x => x.Product.Price * x.Quantity).ToString("C")</h4>
        <a class="btn btn-success" href="@Url.Action("Checkout", "Orders")">Thanh toán</a>
    </div>
}
