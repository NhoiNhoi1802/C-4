@model IEnumerable<Ếch_ăn_chay.Models.Category>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Danh mục";
}

<h2>Danh mục sản phẩm</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên danh mục</th>
                <th>Mô tả</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.CategoryName</td>
                    <td>@(cat.Description ?? "-")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Category", new { id = cat.CategoryId })">Sửa</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Category", new { id = cat.CategoryId })">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Hiện chưa có danh mục nào.</p>
}

<a class="btn btn-success" href="@Url.Action("Create", "Category")">Thêm danh mục mới</a>
